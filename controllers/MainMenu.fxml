<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainMenuPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainMenuController">




   <children>
      <VBox alignment="CENTER" prefHeight="100.0" prefWidth="1000.0">
         <children>
            <Label fx:id="welcomeLabel" text="Welcome to Heng Huat Stock Management System" />
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="50.0" prefWidth="1000.0">
         <children>
            <Label fx:id="dateTimeLabel" text="00:00:00 1/01/2000" />

         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="50.0" prefWidth="1000.0">
         <children>
            <Label fx:id="userLabel" text="Current User: User" />
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="1000.0" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#switchToViewProducts" prefHeight="50.0" prefWidth="200.0" text="View Products" />
            <Button mnemonicParsing="false" onAction="#switchToAddProduct" prefHeight="50.0" prefWidth="200.0" text="Add Product" />
            <Button mnemonicParsing="false" onAction="#switchToAddOrDeductStock" prefHeight="50.0" prefWidth="200.0" text="Add or Deduct Stock" />
            <Button mnemonicParsing="false" onAction="#switchToDiscontinueProduct" prefHeight="50.0" prefWidth="200.0" text="Discontinue Product" />
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#logout" prefHeight="50.0" prefWidth="200.0" text="Logout" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
   </children>
</VBox>
